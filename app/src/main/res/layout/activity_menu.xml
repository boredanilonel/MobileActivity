<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@drawable/game_background"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🐞 ЖУКИ 🐞"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="🎮 НАЧАТЬ ИГРУ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <!-- НОВАЯ КНОПКА РЕГИСТРАЦИИ -->
    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="📝 РЕГИСТРАЦИЯ"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="⚙️ НАСТРОЙКИ"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnAuthors"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="👥 АВТОРЫ"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnRules"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="📚 ПРАВИЛА"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="40dp" />

    <!-- Добавляем после кнопки Правила -->
    <Button
        android:id="@+id/btnRecords"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="🏆 РЕКОРДЫ"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рекорд: 0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:background="#FFF3E0"
        android:padding="16dp"
        android:gravity="center" />

</LinearLayout>