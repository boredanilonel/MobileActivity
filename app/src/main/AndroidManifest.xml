<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.zhuk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zhuk"
        tools:targetApi="31">

        <!-- ГЛАВНОЕ МЕНЮ -->
        <activity
            android:name=".MenuActivity"
            android:label="Жуки"
            android:exported="true"
            android:theme="@style/Theme.Zhuk">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ИГРОВАЯ АКТИВНОСТЬ -->
        <activity
            android:name=".GameActivity"
            android:label="Игра Жуки"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="false"
/>

        <!-- ОТДЕЛЬНЫЕ АКТИВНОСТИ ДЛЯ КАЖДОГО РАЗДЕЛА -->
        <activity
            android:name=".RegistrationActivity"
            android:label="Регистрация игрока"
            android:exported="false"
            android:theme="@style/Theme.Zhuk" />

        <activity
            android:name=".RulesActivity"
            android:label="Правила игры"
            android:exported="false"
            android:theme="@style/Theme.Zhuk" />

        <activity
            android:name=".AuthorsActivity"
            android:label="Авторы проекта"
            android:exported="false"
            android:theme="@style/Theme.Zhuk" />

        <activity
            android:name=".SettingsActivity"
            android:label="Настройки игры"
            android:exported="false"
            android:theme="@style/Theme.Zhuk" />

        <activity
            android:name=".RecordsActivity"
            android:label="Таблица рекордов"
            android:exported="false" />

        <!-- Виджет -->
        <receiver android:name=".GoldWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

    </application>

</manifest>